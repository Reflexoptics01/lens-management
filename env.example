# Firebase Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real values to version control

# Firebase API Keys and Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Security Configuration (Production)
# Comma-separated list of admin emails and UIDs
VITE_ADMIN_EMAILS=admin@yourcompany.com,admin2@yourcompany.com
VITE_ADMIN_UIDS=uid1,uid2
VITE_ENVIRONMENT=production

# Application Configuration
VITE_APP_NAME=Lens Management System
VITE_APP_VERSION=1.0.0
VITE_SUPPORT_EMAIL=support@yourcompany.com

# Build Configuration
VITE_BUILD_MODE=production

# Security Headers (for hosting configuration)
# Add these to your hosting platform (Netlify, Vercel, etc.)
# X-Content-Type-Options: nosniff
# X-Frame-Options: DENY
# X-XSS-Protection: 1; mode=block
# Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.firebaseio.com https://*.googleapis.com
# Strict-Transport-Security: max-age=31536000; includeSubDomains 